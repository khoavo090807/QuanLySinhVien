@model QuanLySinhVien.Models.CauHoiTracNghiem

@{
    ViewBag.Title = "Thêm câu hỏi trắc nghiệm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <h2><i class="fas fa-plus-circle"></i> Thêm câu hỏi trắc nghiệm</h2>
            <p class="text-muted">Đề thi: <strong>@ViewBag.TenDeThi</strong></p>

            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger">
                    @Html.ValidationSummary(true)
                </div>
            }

            @using (Html.BeginForm("Create", "CauHoiTracNghiem", new { maDT = ViewBag.MaDT }, FormMethod.Post))
            {
                @Html.AntiForgeryToken()

                <div class="card">
                    <div class="card-body">
                        <div class="form-group">
                            <label for="NoiDung">
                                <strong>Nội dung câu hỏi <span class="text-danger">*</span></strong>
                            </label>
                            @Html.TextAreaFor(m => m.NoiDung, new { @class = "form-control", rows = 3, placeholder = "Nhập nội dung câu hỏi..." })
                            @Html.ValidationMessageFor(m => m.NoiDung, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            <label for="DapAnA">
                                <strong>Đáp án A <span class="text-danger">*</span></strong>
                            </label>
                            @Html.TextBoxFor(m => m.DapAnA, new { @class = "form-control", placeholder = "Nhập đáp án A..." })
                            @Html.ValidationMessageFor(m => m.DapAnA, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            <label for="DapAnB">
                                <strong>Đáp án B <span class="text-danger">*</span></strong>
                            </label>
                            @Html.TextBoxFor(m => m.DapAnB, new { @class = "form-control", placeholder = "Nhập đáp án B..." })
                            @Html.ValidationMessageFor(m => m.DapAnB, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            <label for="DapAnC">
                                <strong>Đáp án C <span class="text-danger">*</span></strong>
                            </label>
                            @Html.TextBoxFor(m => m.DapAnC, new { @class = "form-control", placeholder = "Nhập đáp án C..." })
                            @Html.ValidationMessageFor(m => m.DapAnC, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            <label for="DapAnD">
                                <strong>Đáp án D <span class="text-danger">*</span></strong>
                            </label>
                            @Html.TextBoxFor(m => m.DapAnD, new { @class = "form-control", placeholder = "Nhập đáp án D..." })
                            @Html.ValidationMessageFor(m => m.DapAnD, "", new { @class = "text-danger" })
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="DapAnDung">
                                        <strong>Đáp án đúng <span class="text-danger">*</span></strong>
                                    </label>
                                    @Html.DropDownListFor(m => m.DapAnDung,
                                        new SelectList(new[] { "A", "B", "C", "D" }),
                                        "-- Chọn --",
                                        new { @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.DapAnDung, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="Diem">
                                        <strong>Điểm <span class="text-danger">*</span></strong>
                                    </label>
                                    @Html.TextBoxFor(m => m.Diem, new { @class = "form-control", @type = "number", @step = "0.5", @min = "0.5", @max = "10" })
                                    @Html.ValidationMessageFor(m => m.Diem, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="card-footer bg-light">
                        <button type="submit" class="btn btn-success">
                            <i class="fas fa-save"></i> Lưu câu hỏi
                        </button>
                        <a href="@Url.Action("Index", new { maDT = ViewBag.MaDT })" class="btn btn-secondary">
                            <i class="fas fa-times"></i> Hủy
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .form-group label {
        margin-top: 10px;
    }

    .text-danger {
        color: #dc3545;
    }
</style>