@{
    ViewBag.Title = "Import câu hỏi từ Excel";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <h2><i class="fas fa-upload"></i> Import câu hỏi trắc nghiệm từ Excel</h2>
            <p class="text-muted">Đề thi: <strong>@ViewBag.TenDeThi</strong></p>

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show">
                    <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
                    <button type="button" class="close" data-dismiss="alert">&times;</button>
                </div>
            }

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show">
                    <i class="fas fa-exclamation-circle"></i> @TempData["ErrorMessage"]
                    <button type="button" class="close" data-dismiss="alert">&times;</button>
                </div>
            }

            <div class="card mb-4">
                <div class="card-header bg-info text-white">
                    <strong>Hướng dẫn định dạng file Excel</strong>
                </div>
                <div class="card-body">
                    <p>File Excel phải có các cột theo thứ tự:</p>
                    <table class="table table-sm table-bordered">
                        <thead class="table-light">
                            <tr>
                                <th style="width: 10%">Cột</th>
                                <th style="width: 20%">Tên</th>
                                <th style="width: 70%">Mô tả</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td><strong>1</strong></td>
                                <td>Nội dung câu hỏi</td>
                                <td>Câu hỏi (bắt buộc, tối đa 1000 ký tự)</td>
                            </tr>
                            <tr>
                                <td><strong>2</strong></td>
                                <td>Đáp án A</td>
                                <td>Nội dung đáp án A (bắt buộc, tối đa 500 ký tự)</td>
                            </tr>
                            <tr>
                                <td><strong>3</strong></td>
                                <td>Đáp án B</td>
                                <td>Nội dung đáp án B (bắt buộc, tối đa 500 ký tự)</td>
                            </tr>
                            <tr>
                                <td><strong>4</strong></td>
                                <td>Đáp án C</td>
                                <td>Nội dung đáp án C (bắt buộc, tối đa 500 ký tự)</td>
                            </tr>
                            <tr>
                                <td><strong>5</strong></td>
                                <td>Đáp án D</td>
                                <td>Nội dung đáp án D (bắt buộc, tối đa 500 ký tự)</td>
                            </tr>
                            <tr>
                                <td><strong>6</strong></td>
                                <td>Đáp án đúng</td>
                                <td>A, B, C hoặc D (bắt buộc)</td>
                            </tr>
                            <tr>
                                <td><strong>7</strong></td>
                                <td>Điểm</td>
                                <td>Số điểm (không bắt buộc, mặc định = 1)</td>
                            </tr>
                        </tbody>
                    </table>

                    <p class="mt-3"><strong>Lưu ý:</strong></p>
                    <ul>
                        <li>Hàng đầu tiên là header (tên cột)</li>
                        <li>Dữ liệu bắt đầu từ hàng 2</li>
                        <li>Nếu cột nào trống, dòng đó sẽ bị bỏ qua</li>
                        <li>Các câu hỏi được thêm vào cuối danh sách hiện có</li>
                    </ul>

                    <p class="mt-3">
                        <a href="#" onclick="downloadTemplate()" class="btn btn-info btn-sm">
                            <i class="fas fa-download"></i> Tải template Excel
                        </a>
                    </p>
                </div>
            </div>

            <div class="card">
                <div class="card-body">
                    @using (Html.BeginForm("ImportExcel", "CauHoiTracNghiem",
                        new { maDT = ViewBag.MaDT }, FormMethod.Post,
                        new { enctype = "multipart/form-data" }))
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-group">
                            <label for="fileExcel">
                                <strong>Chọn file Excel <span class="text-danger">*</span></strong>
                            </label>
                            <div class="custom-file">
                                <input type="file" class="custom-file-input" id="fileExcel" name="fileExcel"
                                       accept=".xlsx,.xls" required>
                                <label class="custom-file-label" for="fileExcel">Chọn file...</label>
                            </div>
                            <small class="form-text text-muted">
                                Chỉ hỗ trợ file .xlsx và .xls (tối đa 5MB)
                            </small>
                        </div>

                        <div class="form-group mt-4">
                            <button type="submit" class="btn btn-success btn-lg btn-block">
                                <i class="fas fa-upload"></i> Import câu hỏi
                            </button>
                        </div>
                    }
                </div>
            </div>

            <div class="text-center mt-3">
                <a href="@Url.Action("Index", new { maDT = ViewBag.MaDT })" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Quay lại
                </a>
            </div>
        </div>
    </div>
</div>

<script>
    // Cập nhật label khi chọn file
    document.getElementById('fileExcel').addEventListener('change', function (e) {
        var fileName = e.target.files[0].name;
        var label = document.querySelector('.custom-file-label');
        label.textContent = fileName;
    });

    // Tải template Excel
    function downloadTemplate() {
        var ws_name = "Template";
        var wb = XLSX.utils.book_new();
        var ws_data = [
            ["Nội dung câu hỏi", "Đáp án A", "Đáp án B", "Đáp án C", "Đáp án D", "Đáp án đúng", "Điểm"],
            ["Ví dụ: 2 + 2 = ?", "3", "4", "5", "6", "B", "1"],
            ["Ví dụ: Thủ đô của Việt Nam là?", "TP.HCM", "Hà Nội", "Đà Nẵng", "Hải Phòng", "B", "1"]
        ];
        var ws = XLSX.utils.aoa_to_sheet(ws_data);
        ws['!cols'] = [{ wch: 30 }, { wch: 15 }, { wch: 15 }, { wch: 15 }, { wch: 15 }, { wch: 12 }, { wch: 8 }];
        XLSX.utils.book_append_sheet(wb, ws, ws_name);
        XLSX.writeFile(wb, "Template_CauHoi_TracNghiem.xlsx");
    }
</script>

<!-- Thêm library XLSX để tải template -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/xlsx/0.18.5/xlsx.min.js"></script>

<style>
    .custom-file-label::after {
        content: "Chọn file...";
    }

    .table-bordered td {
        vertical-align: middle;
    }

    .card-header {
        border-bottom: 2px solid #dee2e6;
    }
</style>