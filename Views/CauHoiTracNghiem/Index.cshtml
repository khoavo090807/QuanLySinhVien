@model List<QuanLySinhVien.Models.CauHoiTracNghiem>

@{
    ViewBag.Title = "Quản lý câu hỏi trắc nghiệm - " + ViewBag.TenDeThi;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid mt-5">
    <div class="row mb-4">
        <div class="col-md-6">
            <h2>
                <i class="fas fa-question-circle"></i> Câu hỏi trắc nghiệm - @ViewBag.TenDeThi
            </h2>
        </div>
        <div class="col-md-6 text-right">
            <a href="@Url.Action("Create", new { maDT = ViewBag.MaDT })" class="btn btn-primary">
                <i class="fas fa-plus"></i> Thêm câu hỏi
            </a>
            <a href="@Url.Action("ImportExcel", new { maDT = ViewBag.MaDT })" class="btn btn-success">
                <i class="fas fa-upload"></i> Import Excel
            </a>
            <a href="@Url.Action("Index", "DeThi")" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Quay lại
            </a>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="close" data-dismiss="alert">&times;</button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            <i class="fas fa-exclamation-circle"></i> @TempData["ErrorMessage"]
            <button type="button" class="close" data-dismiss="alert">&times;</button>
        </div>
    }

    @if (TempData["WarningMessage"] != null)
    {
        <div class="alert alert-warning alert-dismissible fade show">
            <i class="fas fa-exclamation-triangle"></i> @TempData["WarningMessage"]
            <button type="button" class="close" data-dismiss="alert">&times;</button>
        </div>
    }

    <div class="card">
        <div class="card-header bg-primary text-white">
            <strong>Danh sách câu hỏi (Tổng: @Model.Count)</strong>
        </div>
        <div class="card-body p-0">
            @if (Model.Count == 0)
            {
                <div class="alert alert-info m-3">
                    <i class="fas fa-info-circle"></i> Chưa có câu hỏi nào. <a href="@Url.Action("Create", new { maDT = ViewBag.MaDT })">Thêm câu hỏi mới</a>
                </div>
            }
            else
            {
                <table class="table table-hover table-striped mb-0">
                    <thead class="table-light">
                        <tr>
                            <th style="width: 5%">#</th>
                            <th style="width: 35%">Nội dung câu hỏi</th>
                            <th style="width: 10%">Đáp án</th>
                            <th style="width: 10%">Điểm</th>
                            <th style="width: 15%">Thứ tự</th>
                            <th style="width: 25%">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <span class="badge badge-primary"style="color:black;">@item.MaCau</span>
                                </td>
                                <td>
                                    <strong>@Html.DisplayFor(m => item.NoiDung)</strong>
                                    <br />
                                    <small class="text-muted">
                                        A: @item.DapAnA<br />
                                        B: @item.DapAnB<br />
                                        C: @item.DapAnC<br />
                                        D: @item.DapAnD
                                    </small>
                                </td>
                                <td>
                                    <span class="badge badge-success" style="color:black;">@item.DapAnDung</span>
                                </td>
                                <td>
                                    <span class="badge badge-info"style="color:black;">@item.Diem điểm</span>
                                </td>
                                <td>
                                    <span class="badge badge-warning"style="color:black;">Câu @item.ThuTu</span>
                                </td>
                                <td>
                                    <a href="@Url.Action("Edit", new { id = item.MaCau, maDT = ViewBag.MaDT })"
                                       class="btn btn-sm btn-warning" title="Chỉnh sửa">
                                        <i class="fas fa-edit"></i> Sửa
                                    </a>
                                    <a href="@Url.Action("Delete", new { id = item.MaCau, maDT = ViewBag.MaDT })"
                                       class="btn btn-sm btn-danger" onclick="return confirm('Xóa câu hỏi này?')" title="Xóa">
                                        <i class="fas fa-trash"></i> Xóa
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    </div>
</div>

<style>
    .table-hover tbody tr:hover {
        background-color: #f5f5f5;
    }

    .badge {
        padding: 0.5rem 0.75rem;
    }
</style>