@model IEnumerable<QuanLySinhVien.Models.DangKyHocPhan>

@{
    ViewBag.Title = "Danh sách đăng ký học phần";
}

<div class="row mb-4">
    <div class="col-12">
        <h2 class="page-title">
            <i class="fas fa-clipboard-list"></i> Quản lý Đăng ký học phần
        </h2>
    </div>
</div>

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <span><i class="fas fa-list"></i> Danh sách đăng ký học phần</span>
        <a href="@Url.Action("Create")" class="btn btn-light btn-sm">
            <i class="fas fa-plus"></i> Đăng ký mới
        </a>
    </div>
    <div class="card-body">
        <!-- Form tìm kiếm -->
        <div class="row mb-3">
            <div class="col-md-6">
                <form method="get" action="@Url.Action("Index")" class="d-flex">
                    <input type="text" name="maSV" class="form-control me-2"
                           placeholder="Nhập mã sinh viên để lọc..."
                           value="@ViewBag.MaSV" />
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-search"></i> Tìm
                    </button>
                    <a href="@Url.Action("Index")" class="btn btn-secondary ms-2">
                        <i class="fas fa-redo"></i>
                    </a>
                </form>
            </div>
            <div class="col-md-6 text-end">
                <span class="badge bg-info text-dark fs-6">
                    Tổng số: @ViewBag.TotalCount lượt đăng ký
                </span>
            </div>
        </div>

        <!-- Bảng danh sách -->
        <div class="table-responsive">
            <table class="table table-hover table-striped">
                <thead>
                    <tr>
                        <th>Mã SV</th>
                        <th>Họ tên</th>
                        <th>Mã LHP</th>
                        <th>Môn học</th>
                        <th>Học kỳ</th>
                        <th class="text-center">Ngày ĐK</th>
                        <th class="text-center">ĐCC</th>
                        <th class="text-center">ĐGK</th>
                        <th class="text-center">ĐCK</th>
                        <th class="text-center">ĐTK</th>
                        <th class="text-center">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td><strong class="text-primary">@item.MaSV</strong></td>
                                <td>@item.HoTenSV</td>
                                <td><span class="badge bg-secondary">@item.MaLHP</span></td>
                                <td>@item.TenMH</td>
                                <td><span class="badge bg-info">@item.TenHK</span></td>
                                <td class="text-center">
                                    <small>@item.NgayDangKy.ToString("dd/MM/yyyy")</small>
                                </td>
                                <td class="text-center">
                                    @if (item.DiemChuyenCan.HasValue)
                                    {
                                        <span class="badge bg-success">
                                            @item.DiemChuyenCan.Value.ToString("0.##", System.Globalization.CultureInfo.InvariantCulture)
                                        </span>
                                    }
                                    else
                                    { <span class="text-muted">-</span>}
                                </td>
                                <td class="text-center">
                                    @if (item.DiemGiuaKy.HasValue)
                                    {
                                        <span class="badge bg-success">
                                            @item.DiemGiuaKy.Value.ToString("0.##", System.Globalization.CultureInfo.InvariantCulture)
                                        </span>
                                    }
                                    else
                                    { <span class="text-muted">-</span>}
                                </td>
                                <td class="text-center">
                                    @if (item.DiemCuoiKy.HasValue)
                                    {
                                        <span class="badge bg-success">
                                            @item.DiemCuoiKy.Value.ToString("0.##", System.Globalization.CultureInfo.InvariantCulture)
                                        </span>
                                    }
                                    else
                                    { <span class="text-muted">-</span>}
                                </td>
                                <td class="text-center">
                                    @if (item.DiemTongKet.HasValue)
                                    {
                                        var diemTK = item.DiemTongKet.Value;
                                        var cssClass = diemTK >= 8.5 ? "bg-success" :
                                                      (diemTK >= 7.0 ? "bg-info" :
                                                      (diemTK >= 5.5 ? "bg-warning text-dark" :
                                                      (diemTK >= 4.0 ? "bg-secondary" : "bg-danger")));
                                        <span class="badge @cssClass">
                                            @diemTK.ToString("0.##", System.Globalization.CultureInfo.InvariantCulture)
                                        </span>
                                    }
                                    else
                                    { <span class="text-muted">-</span>}
                                </td>
                                <td class="text-center">
                                    <div class="btn-group btn-group-sm" role="group">
                                        <a href="@Url.Action("Edit", new { maSV = item.MaSV, maLHP = item.MaLHP })"
                                           class="btn btn-warning" title="Nhập điểm">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a href="@Url.Action("Delete", new { maSV = item.MaSV, maLHP = item.MaLHP })"
                                           class="btn btn-danger" title="Hủy đăng ký">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="11" class="text-center text-muted py-4">
                                <i class="fas fa-inbox fa-3x mb-3"></i>
                                <p>Không có dữ liệu đăng ký học phần</p>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="mt-3">
            <small class="text-muted">
                <strong>Chú thích:</strong>
                ĐCC = Điểm chuyên cần |
                ĐGK = Điểm giữa kỳ |
                ĐCK = Điểm cuối kỳ |
                ĐTK = Điểm tổng kết
            </small>
        </div>
    </div>
</div>
