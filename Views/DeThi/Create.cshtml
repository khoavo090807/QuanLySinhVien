@model QuanLySinhVien.Models.DeThi

@{
    ViewBag.Title = "Tạo đề thi mới";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <h2>
                <i class="fas fa-plus-circle"></i> Tạo Đề Thi Mới
            </h2>

            @using (Html.BeginForm("Create", "DeThi", FormMethod.Post))
            {
                @Html.AntiForgeryToken()

                <div class="card">
                    <div class="card-body">
                        <div class="form-group">
                            <label><strong>Mã Đề Thi <span class="text-danger">*</span></strong></label>
                            @Html.TextBoxFor(m => m.MaDT, new { @class = "form-control", placeholder = "VD: DT001" })
                            @Html.ValidationMessageFor(m => m.MaDT, "", new { @class = "text-danger" })
                            <small class="form-text text-muted">Mã duy nhất, không thể thay đổi sau khi tạo</small>
                        </div>

                        <div class="form-group">
                            <label><strong>Tên Đề Thi <span class="text-danger">*</span></strong></label>
                            @Html.TextBoxFor(m => m.TenDT, new { @class = "form-control", placeholder = "Nhập tên đề thi..." })
                            @Html.ValidationMessageFor(m => m.TenDT, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            <label><strong>Mô Tả</strong></label>
                            @Html.TextAreaFor(m => m.MoTa, new { @class = "form-control", rows = 3, placeholder = "Nhập mô tả..." })
                        </div>

                        <div class="form-group">
                            <label><strong>Khoa <span class="text-danger">*</span></strong></label>
                            @Html.DropDownListFor(m => m.MaKhoa, ViewBag.DanhSachKhoa as List<SelectListItem>,
                                "-- Chọn khoa --", new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.MaKhoa, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            <label><strong>Thời Gian Làm Bài (phút)</strong></label>
                            @Html.TextBoxFor(m => m.ThoiGianLamBai, new { @class = "form-control", @type = "number", placeholder = "0" })
                            <small class="form-text text-muted">Ví dụ: 90 phút</small>
                        </div>

                        <div class="form-group">
                            <label><strong>Trạng Thái</strong></label>
                            <div class="custom-control custom-checkbox">
                                @Html.CheckBoxFor(m => m.TrangThai, new { @class = "custom-control-input" })
                                <label class="custom-control-label" for="TrangThai">
                                    Hoạt động
                                </label>
                            </div>
                            <small class="form-text text-muted">Đề thi sẽ được kích hoạt</small>
                        </div>

                        <div class="alert alert-info">
                            <i class="fas fa-info-circle"></i>
                            <strong>Lưu ý:</strong> Sau khi tạo đề thi, bạn sẽ có thể thêm câu hỏi trắc nghiệm.
                        </div>
                    </div>

                    <div class="card-footer bg-light">
                        <button type="submit" class="btn btn-success btn-lg">
                            <i class="fas fa-save"></i> Tạo Đề Thi
                        </button>

                        <a href="@Url.Action("Index")" class="btn btn-secondary btn-lg">
                            <i class="fas fa-arrow-left"></i> Quay Lại
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .form-group label {
        margin-top: 15px;
        color: #333;
    }

    .text-danger {
        color: #dc3545;
    }

    .btn-lg {
        margin-right: 10px;
    }

    .card {
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }
</style>