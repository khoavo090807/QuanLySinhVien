
@model List<QuanLySinhVien.Models.DeThi>

@{
    ViewBag.Title = "Quản lý đề thi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid mt-5">
    <div class="row mb-4">
        <div class="col-md-6">
            <h2>
                <i class="fas fa-file-alt"></i> Quản Lý Đề Thi
            </h2>
        </div>
        <div class="col-md-6 text-right">
            <a href="@Url.Action("Create")" class="btn btn-success btn-lg">
                <i class="fas fa-plus"></i> Tạo Đề Thi Mới
            </a>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="close" data-dismiss="alert">&times;</button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle"></i> @TempData["ErrorMessage"]
            <button type="button" class="close" data-dismiss="alert">&times;</button>
        </div>
    }

    <!-- Tìm kiếm -->
    <div class="card mb-4">
        <div class="card-body">
            @using (Html.BeginForm("Index", "DeThi", FormMethod.Get))
            {
                <div class="row">
                    <div class="col-md-8">
                        @Html.TextBox("searchString", ViewBag.SearchString as string,
                            new { @class = "form-control form-control-lg", placeholder = "Tìm kiếm theo mã đề thi hoặc tên..." })
                    </div>
                    <div class="col-md-4">
                        <button type="submit" class="btn btn-primary btn-lg btn-block">
                            <i class="fas fa-search"></i> Tìm kiếm
                        </button>
                    </div>
                </div>
            }
        </div>
    </div>

    <!-- Danh sách đề thi -->
    @if (Model.Count == 0)
    {
        <div class="alert alert-info" role="alert">
            <i class="fas fa-info-circle"></i> Chưa có đề thi nào. <a href="@Url.Action("Create")">Tạo mới</a>
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100 shadow-sm hover-card">
                        <div class="card-header bg-primary text-white">
                            <h5 class="card-title mb-0">
                                <i class="fas fa-book"></i> @Html.DisplayFor(m => item.TenDT)
                            </h5>
                        </div>

                        <div class="card-body">
                            <table class="table table-sm table-borderless">
                                <tbody>
                                    <tr>
                                        <td><strong>Mã:</strong></td>
                                        <td>@item.MaDT</td>
                                        
                                    </tr>
                                    <tr>
                                        <td><strong>Khoa:</strong></td>
                                        <td>@item.TenKhoa</td>
                                    </tr>
                                    <tr>
                                        <td><strong>Câu hỏi:</strong></td>
                                        <td>@item.SoCau</td>
                                        
                                    </tr>
                                    <tr>
                                        <td><strong>Thời gian:</strong></td>
                                        <td>@(item.ThoiGianLamBai > 0 ? item.ThoiGianLamBai + " phút" : "Không xác định")</td>
                                    </tr>
                                    <tr>
                                        <td><strong>Trạng thái:</strong></td>
                                        <td>
                                            @if (item.TrangThai)
                                            {
                                                <span class="badge badge-success " >
                                                    <i class="fas fa-check-circle"></i> Hoạt động
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="badge badge-danger ">
                                                    <i class="fas fa-times-circle"></i> Khóa
                                                </span>
                                            }
                                        </td>
                                    </tr>
                                    <tr>
                                        <td><strong>Ngày tạo:</strong></td>
                                        <td>@item.NgayTao.ToString("dd/MM/yyyy")</td>
                                    </tr>
                                </tbody>
                            </table>

                            @if (!string.IsNullOrEmpty(item.MoTa))
                            {
                                <div class="alert alert-light mt-3">
                                    <small><strong>Mô tả:</strong> @Html.DisplayFor(m => item.MoTa)</small>
                                </div>
                            }
                        </div>

                        <div class="card-footer bg-light">
                            <div class="btn-group btn-block btn-group-sm" role="group">
                                <a href="@Url.Action("Edit", new { id = item.MaDT })"
                                   class="btn btn-warning" title="Chỉnh sửa đề thi">
                                    <i class="fas fa-edit"></i> Sửa
                                </a>

                                <a href="@Url.Action("Index", "CauHoiTracNghiem", new { maDT = item.MaDT })"
                                   class="btn btn-info" title="Quản lý câu hỏi">
                                    <i class="fas fa-question-circle"></i> Câu hỏi
                                </a>

                                <a href="@Url.Action("Delete", new { id = item.MaDT })"
                                   class="btn btn-danger" title="Xóa đề thi">
                                    <i class="fas fa-trash"></i> Xóa
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

<style>
    .hover-card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .hover-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.15) !important;
        }

    .card-header {
        border-bottom: 3px solid #007bff;
    }

    .table-sm td {
        padding: 0.4rem;
        vertical-align: middle;
    }

    .btn-group-sm > .btn {
        padding: 0.25rem 0.5rem;
        font-size: 0.875rem;
    }

    .badge {
        padding: 0.4rem 0.6rem;
        vertical-align: middle;
    }

    
</style>