@model IEnumerable<QuanLySinhVien.Models.DiemThongKe>

@{
    ViewBag.Title = "Bảng điểm lớp";
}

<div class="row mb-4">
    <div class="col-12">
        <h2 class="page-title">
            <i class="fas fa-table"></i> Bảng điểm lớp học
        </h2>
    </div>
</div>

<div class="card">
    <div class="card-header">
        <i class="fas fa-filter"></i> Lọc
    </div>
    <div class="card-body">
        @using (Html.BeginForm("BangDiemLop", "Diem", FormMethod.Get))
        {
            <div class="row">
                <div class="col-md-6">
                    <label class="form-label">Chọn lớp:</label>
                    @Html.DropDownList("maLop",
                        (IEnumerable<SelectListItem>)ViewBag.DanhSachLop,
                        new { @class = "form-select" })
                </div>
                <div class="col-md-6">
                    <label class="form-label">Chọn học kỳ:</label>
                    @Html.DropDownList("maHK",
                        (IEnumerable<SelectListItem>)ViewBag.DanhSachHocKy,
                        new { @class = "form-select" })
                </div>
            </div>
            <div class="mt-3">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-search"></i> Xem bảng điểm
                </button>
            </div>
        }
    </div>
</div>

@if (Model != null && Model.Any())
{
    <div class="card mt-3">
        <div class="card-header">
            <i class="fas fa-list"></i> Bảng điểm lớp @ViewBag.MaLop
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover table-striped table-sm">
                    <thead>
                        <tr>
                            <th>Mã SV</th>
                            <th>Họ tên</th>
                            <th>Mã LHP</th>
                            <th>Tên môn</th>
                            <th class="text-center">ĐCC</th>
                            <th class="text-center">ĐGK</th>
                            <th class="text-center">ĐCK</th>
                            <th class="text-center">ĐTK</th>
                            <th class="text-center">XL</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td><strong>@item.MaSV</strong></td>
                                <td>@item.HoTenSV</td>
                                <td><span class="badge bg-secondary">@item.MaLHP</span></td>
                                <td>@item.TenMH</td>
                                <td class="text-center">
                                    @if (item.DiemChuyenCan.HasValue)
                                    {
                                        @item.DiemChuyenCan.Value.ToString("0.0")
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td class="text-center">
                                    @if (item.DiemGiuaKy.HasValue)
                                    {
                                        @item.DiemGiuaKy.Value.ToString("0.0")
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td class="text-center">
                                    @if (item.DiemCuoiKy.HasValue)
                                    {
                                        @item.DiemCuoiKy.Value.ToString("0.0")
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td class="text-center">
                                    @if (item.DiemTongKet.HasValue)
                                    {
                                        var dtk = item.DiemTongKet.Value;
                                        var cssClass = dtk >= 8.5 ? "bg-success" : (dtk >= 7 ? "bg-info" : (dtk >= 5.5 ? "bg-warning" : "bg-danger"));
                                        <span class="badge @cssClass">@dtk.ToString("0.00")</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td class="text-center">
                                    <span class="badge bg-primary">@item.XepLoai</span>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}