@model QuanLySinhVien.Models.HocKy

@{
    ViewBag.Title = "Chi tiết học kỳ";
}

<div class="row mb-4">
    <div class="col-12">
        <h2 class="page-title">
            <i class="fas fa-info-circle"></i> Chi tiết học kỳ
        </h2>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <i class="fas fa-calendar-alt"></i> Thông tin học kỳ
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4">Mã học kỳ:</dt>
                    <dd class="col-sm-8"><strong class="text-primary">@Model.MaHK</strong></dd>

                    <dt class="col-sm-4">Tên học kỳ:</dt>
                    <dd class="col-sm-8">@Model.TenHK</dd>

                    <dt class="col-sm-4">Năm học:</dt>
                    <dd class="col-sm-8"><span class="badge bg-secondary">@Model.NamHoc</span></dd>

                    <dt class="col-sm-4">Ngày bắt đầu:</dt>
                    <dd class="col-sm-8">@Model.NgayBatDau.ToString("dd/MM/yyyy")</dd>

                    <dt class="col-sm-4">Ngày kết thúc:</dt>
                    <dd class="col-sm-8">@Model.NgayKetThuc.ToString("dd/MM/yyyy")</dd>

                    <dt class="col-sm-4">Trạng thái:</dt>
                    <dd class="col-sm-8">
                        @{
                            var trangThai = ViewBag.TrangThai;
                            var cssClass = trangThai == "Đang mở" ? "bg-success" : (trangThai == "Chưa bắt đầu" ? "bg-warning" : "bg-danger");
                        }
                        <span class="badge @cssClass fs-6">@trangThai</span>
                    </dd>

                    @if (trangThai == "Đang mở")
                    {
                        <dt class="col-sm-4">Còn lại:</dt>
                        <dd class="col-sm-8">
                            <span class="badge bg-info">@Model.SoNgayConLai() ngày</span>
                        </dd>
                    }
                </dl>
            </div>
        </div>

        <div class="text-start mt-3">
            <a href="@Url.Action("Edit", new { id = Model.MaHK })" class="btn btn-warning">
                <i class="fas fa-edit"></i> Chỉnh sửa
            </a>
            <a href="@Url.Action("Index")" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Quay lại
            </a>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card">
            <div class="card-header bg-info text-white">
                <i class="fas fa-chart-bar"></i> Thống kê
            </div>
            <div class="card-body">
                <div class="mb-4">
                    <h6 class="mb-2">Số lớp học phần</h6>
                    <h2 class="text-success">@Model.SoLopHocPhan</h2>
                </div>
                <hr />
                <div>
                    <h6 class="mb-2">Sinh viên đăng ký</h6>
                    <h2 class="text-primary">@Model.SoSinhVienDangKy</h2>
                </div>
            </div>
        </div>
    </div>
</div>