@{
    ViewBag.Title = "Trang chủ";
}

<div class="row mb-4">
    <div class="col-12">
        <h2 class="page-title">
            <i class="fas fa-tachometer-alt"></i> Dashboard - Tổng quan hệ thống
        </h2>
    </div>
</div>

<!-- Thống kê tổng quan -->
<div class="row">
    <div class="col-md-3 mb-4">
        <div class="card text-white" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-title mb-0">Tổng sinh viên</h6>
                        <h2 class="mt-2 mb-0">@ViewBag.TongSinhVien</h2>
                    </div>
                    <div>
                        <i class="fas fa-user-graduate fa-3x opacity-50"></i>
                    </div>
                </div>
            </div>
            <div class="card-footer bg-transparent border-0">
                <a href="@Url.Action("Index", "SinhVien")" class="text-white text-decoration-none">
                    <small>Xem chi tiết <i class="fas fa-arrow-right"></i></small>
                </a>
            </div>
        </div>
    </div>

    <div class="col-md-3 mb-4">
        <div class="card text-white" style="background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-title mb-0">Tổng lớp học</h6>
                        <h2 class="mt-2 mb-0">@ViewBag.TongLop</h2>
                    </div>
                    <div>
                        <i class="fas fa-users fa-3x opacity-50"></i>
                    </div>
                </div>
            </div>
            <div class="card-footer bg-transparent border-0">
                <a href="@Url.Action("Index", "Lop")" class="text-white text-decoration-none">
                    <small>Xem chi tiết <i class="fas fa-arrow-right"></i></small>
                </a>
            </div>
        </div>
    </div>

    <div class="col-md-3 mb-4">
        <div class="card text-white" style="background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-title mb-0">Tổng môn học</h6>
                        <h2 class="mt-2 mb-0">@ViewBag.TongMonHoc</h2>
                    </div>
                    <div>
                        <i class="fas fa-book fa-3x opacity-50"></i>
                    </div>
                </div>
            </div>
            <div class="card-footer bg-transparent border-0">
                <a href="@Url.Action("Index", "MonHoc")" class="text-white text-decoration-none">
                    <small>Xem chi tiết <i class="fas fa-arrow-right"></i></small>
                </a>
            </div>
        </div>
    </div>

    <div class="col-md-3 mb-4">
        <div class="card text-white" style="background: linear-gradient(135deg, #43e97b 0%, #38f9d7 100%);">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-title mb-0">Lượt đăng ký</h6>
                        <h2 class="mt-2 mb-0">@ViewBag.TongDangKy</h2>
                    </div>
                    <div>
                        <i class="fas fa-clipboard-list fa-3x opacity-50"></i>
                    </div>
                </div>
            </div>
            <div class="card-footer bg-transparent border-0">
                <a href="@Url.Action("Index", "DangKyHocPhan")" class="text-white text-decoration-none">
                    <small>Xem chi tiết <i class="fas fa-arrow-right"></i></small>
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Quick Actions -->
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <i class="fas fa-bolt"></i> Thao tác nhanh
            </div>
            <div class="card-body">
                <div class="row text-center">
                    <div class="col-md-3 mb-3">
                        <a href="@Url.Action("Create", "SinhVien")" class="btn btn-outline-primary btn-lg w-100">
                            <i class="fas fa-user-plus fa-2x mb-2"></i>
                            <p class="mb-0">Thêm sinh viên</p>
                        </a>
                    </div>
                    <div class="col-md-3 mb-3">
                        <a href="@Url.Action("Create", "Lop")" class="btn btn-outline-primary btn-lg w-100">
                            <i class="fas fa-plus-circle fa-2x mb-2"></i>
                            <p class="mb-0">Thêm lớp học</p>
                        </a>
                    </div>
                    <div class="col-md-3 mb-3">
                        <a href="@Url.Action("Create", "MonHoc")" class="btn btn-outline-primary btn-lg w-100">
                            <i class="fas fa-book-medical fa-2x mb-2"></i>
                            <p class="mb-0">Thêm môn học</p>
                        </a>
                    </div>
                    <div class="col-md-3 mb-3">
                        <a href="@Url.Action("Create", "DangKyHocPhan")" class="btn btn-outline-primary btn-lg w-100">
                            <i class="fas fa-edit fa-2x mb-2"></i>
                            <p class="mb-0">Đăng ký học phần</p>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Thông tin hệ thống -->
<div class="row mt-4">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <i class="fas fa-info-circle"></i> Thông tin hệ thống
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <h5><i class="fas fa-university text-primary"></i> Hệ thống Quản lý Sinh viên</h5>
                        <p class="text-muted">Phiên bản: 1.0.0</p>
                        <p class="text-muted">Công nghệ: ASP.NET MVC 5 + ADO.NET + Bootstrap 5</p>
                    </div>
                    <div class="col-md-6">
                        <h5><i class="fas fa-calendar-alt text-primary"></i> Ngày giờ hệ thống</h5>
                        <p class="text-muted">@DateTime.Now.ToString("dd/MM/yyyy HH:mm:ss")</p>
                        <p class="text-muted">Học kỳ hiện tại: HK1-2425</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>