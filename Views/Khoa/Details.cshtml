@model QuanLySinhVien.Models.Khoa

@{
    ViewBag.Title = "Chi tiết khoa";
}

<div class="row mb-4">
    <div class="col-12">
        <h2 class="page-title">
            <i class="fas fa-building"></i> Chi tiết khoa
        </h2>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <i class="fas fa-info-circle"></i> Thông tin khoa
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4">Mã khoa:</dt>
                    <dd class="col-sm-8"><strong>@Model.MaKhoa</strong></dd>

                    <dt class="col-sm-4">Tên khoa:</dt>
                    <dd class="col-sm-8">@Model.TenKhoa</dd>

                    <dt class="col-sm-4">Số điện thoại:</dt>
                    <dd class="col-sm-8">@Model.SoDienThoai</dd>

                    
                </dl>
            </div>
        </div>

        <div class="text-start mt-3">
            <a href="@Url.Action("Edit", new { id = Model.MaKhoa })" class="btn btn-warning">
                <i class="fas fa-edit"></i> Chỉnh sửa
            </a>
            <a href="@Url.Action("Index")" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Quay lại
            </a>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card">
            <div class="card-header bg-info text-white">
                <i class="fas fa-chart-bar"></i> Thống kê
            </div>
            <div class="card-body">
                <div class="text-center mb-3">
                    <h5>Số lớp học</h5>
                    <h2 class="text-success">@ViewBag.SoLop</h2>
                </div>
                <hr />
                <div class="text-center">
                    <h5>Số giáo viên</h5>
                    <h2 class="text-primary">@ViewBag.SoGiangVien</h2>
                </div>
            </div>
        </div>
    </div>
</div>

