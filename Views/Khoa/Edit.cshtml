<!-- ========== 3. KHOA/EDIT.CSHTML ========== -->
@model QuanLySinhVien.Models.Khoa

@{
    ViewBag.Title = "Chỉnh sửa khoa";
}

<div class="row mb-4">
    <div class="col-12">
        <h2 class="page-title">
            <i class="fas fa-edit"></i> Chỉnh sửa khoa
        </h2>
    </div>
</div>

<div class="card">
    <div class="card-header">
        <i class="fas fa-edit"></i> Cập nhật thông tin - Mã khoa: <strong>@Model.MaKhoa</strong>
    </div>
    <div class="card-body">
        @using (Html.BeginForm("Edit", "Khoa", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.MaKhoa)
            @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })

            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        @Html.LabelFor(model => model.MaKhoa, new { @class = "form-label" })
                        @Html.TextBoxFor(model => model.MaKhoa, new { @class = "form-control", @readonly = "readonly", style = "background-color: #e9ecef;" })
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="mb-3">
                        @Html.LabelFor(model => model.TenKhoa, new { @class = "form-label" })
                        <span class="text-danger">*</span>
                        @Html.TextBoxFor(model => model.TenKhoa, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.TenKhoa, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-4">
                    <div class="mb-3">
                        @Html.LabelFor(model => model.SoDienThoai, new { @class = "form-label" })
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-phone"></i></span>
                            @Html.TextBoxFor(model => model.SoDienThoai, new { @class = "form-control" })
                        </div>
                    </div>
                </div>

                

                
            </div>

            <hr />

            <div class="text-end">
                <a href="@Url.Action("Index")" class="btn btn-secondary">
                    <i class="fas fa-times"></i> Hủy
                </a>
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save"></i> Cập nhật
                </button>
            </div>
        }
    </div>
</div>