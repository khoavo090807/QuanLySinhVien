@model IEnumerable<QuanLySinhVien.Models.Khoa>

@{
    ViewBag.Title = "Danh sách khoa";
}

<div class="row mb-4">
    <div class="col-12">
        <h2 class="page-title">
            <i class="fas fa-building"></i> Quản lý Khoa
        </h2>
    </div>
</div>

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <span><i class="fas fa-list"></i> Danh sách khoa</span>
        <a href="@Url.Action("Create")" class="btn btn-light btn-sm">
            <i class="fas fa-plus"></i> Thêm khoa mới
        </a>
    </div>
    <div class="card-body">
        <!-- Form tìm kiếm -->
        <div class="row mb-3">
            <div class="col-md-6">
                @using (Html.BeginForm("Index", "Khoa", FormMethod.Get, new { @class = "d-flex" }))
                {
                    <input type="text" name="searchString" class="form-control me-2"
                           placeholder="Tìm kiếm theo mã khoa, tên khoa..."
                           value="@ViewBag.SearchString" />
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-search"></i> Tìm
                    </button>
                    <a href="@Url.Action("Index")" class="btn btn-secondary ms-2">
                        <i class="fas fa-redo"></i>
                    </a>
                }
            </div>
            <div class="col-md-6 text-end">
                <span class="badge bg-info text-dark fs-6">
                    Tổng số: @Model.Count() khoa
                </span>
            </div>
        </div>

        <!-- Bảng danh sách -->
        <div class="table-responsive">
            <table class="table table-hover table-striped">
                <thead>
                    <tr>
                        <th>Mã khoa</th>
                        <th>Tên khoa</th>
                        <th>Số điện thoại</th>
                        
                        <th class="text-center" width="200">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td><strong class="text-primary">@item.MaKhoa</strong></td>
                                <td>@item.TenKhoa</td>
                                <td>
                                    <small><i class="fas fa-phone"></i> @item.SoDienThoai</small>
                                </td>
                                
                                
                                <td class="text-center">
                                    <div class="btn-group btn-group-sm" role="group">
                                        <a href="@Url.Action("Details", new { id = item.MaKhoa })"
                                           class="btn btn-info" title="Chi tiết">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a href="@Url.Action("Edit", new { id = item.MaKhoa })"
                                           class="btn btn-warning" title="Sửa">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a href="@Url.Action("Delete", new { id = item.MaKhoa })"
                                           class="btn btn-danger" title="Xóa">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="text-center text-muted py-4">
                                <i class="fas fa-inbox fa-3x mb-3"></i>
                                <p>Không có dữ liệu khoa</p>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>