@* ========== DELETE.CSHTML ========== *@
@model QuanLySinhVien.Models.Lop

@{
    ViewBag.Title = "Xóa lớp học";
}

<div class="row mb-4">
    <div class="col-12">
        <h2 class="page-title text-danger">
            <i class="fas fa-trash-alt"></i> Xác nhận xóa lớp học
        </h2>
    </div>
</div>

<div class="card border-danger">
    <div class="card-header bg-danger text-white">
        <i class="fas fa-exclamation-triangle"></i> Cảnh báo xóa dữ liệu
    </div>
    <div class="card-body">
        <div class="alert alert-warning" role="alert">
            <i class="fas fa-info-circle"></i> <strong>Lưu ý:</strong>
            Không thể xóa lớp nếu còn sinh viên trong lớp!
        </div>

        <h4 class="mb-4">Thông tin lớp học sẽ bị xóa:</h4>

        <div class="row">
            <div class="col-md-8 offset-md-2">
                <dl class="row">
                    <dt class="col-sm-4">Mã lớp:</dt>
                    <dd class="col-sm-8"><strong class="text-primary">@Model.MaLop</strong></dd>

                    <dt class="col-sm-4">Tên lớp:</dt>
                    <dd class="col-sm-8">@Model.TenLop</dd>

                    <dt class="col-sm-4">Sĩ số:</dt>
                    <dd class="col-sm-8">
                        <span class="badge bg-info">@Model.SiSo sinh viên</span>
                    </dd>

                    <dt class="col-sm-4">Khoa:</dt>
                    <dd class="col-sm-8">
                        <span class="badge bg-success">@Model.TenKhoa</span>
                    </dd>

                    <dt class="col-sm-4">Hệ đào tạo:</dt>
                    <dd class="col-sm-8">
                        <span class="badge bg-warning text-dark">@Model.TenHeDT</span>
                    </dd>
                </dl>
            </div>
        </div>

        <hr />

        @using (Html.BeginForm("Delete", "Lop", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.MaLop)

            <div class="text-end">
                <a href="@Url.Action("Index")" class="btn btn-secondary btn-lg">
                    <i class="fas fa-arrow-left"></i> Hủy bỏ
                </a>
                <button type="submit" class="btn btn-danger btn-lg" onclick="return confirm('Bạn có chắc chắn muốn xóa lớp học này?');">
                    <i class="fas fa-trash"></i> Xác nhận xóa
                </button>
            </div>
        }
    </div>
</div>