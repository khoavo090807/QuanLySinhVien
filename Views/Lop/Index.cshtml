@model IEnumerable<QuanLySinhVien.Models.Lop>

@{
    ViewBag.Title = "Danh sách lớp học";
}

<div class="row mb-4">
    <div class="col-12">
        <h2 class="page-title">
            <i class="fas fa-users"></i> Quản lý Lớp học
        </h2>
    </div>
</div>

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <span><i class="fas fa-list"></i> Danh sách lớp học</span>
        <a href="@Url.Action("Create")" class="btn btn-light btn-sm">
            <i class="fas fa-plus"></i> Thêm lớp mới
        </a>
    </div>
    <div class="card-body">
        <div class="mb-3">
            <span class="badge bg-info text-dark fs-6">
                Tổng số: @Model.Count() lớp học
            </span>
        </div>

        <div class="table-responsive">
            <table class="table table-hover table-striped">
                <thead>
                    <tr>
                        <th>Mã lớp</th>
                        <th>Tên lớp</th>
                        <th class="text-center">Sĩ số</th>
                        <th>Khoa</th>
                        <th>Hệ đào tạo</th>
                        <th class="text-center" width="150">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td><strong class="text-primary">@item.MaLop</strong></td>
                                <td>@item.TenLop</td>
                                <td class="text-center">
                                    <span class="badge bg-info">@item.SiSo sinh viên</span>
                                </td>
                                <td>
                                    <span class="badge bg-success">@item.TenKhoa</span>
                                </td>
                                <td>
                                    <span class="badge bg-warning text-dark">@item.TenHeDT</span>
                                </td>
                                <td class="text-center">
                                    <div class="btn-group btn-group-sm" role="group">
                                        <a href="@Url.Action("Edit", new { id = item.MaLop })"
                                           class="btn btn-warning" title="Sửa">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a href="@Url.Action("Delete", new { id = item.MaLop })"
                                           class="btn btn-danger" title="Xóa">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="text-center text-muted py-4">
                                <i class="fas fa-inbox fa-3x mb-3"></i>
                                <p>Không có dữ liệu lớp học</p>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>