@model QuanLySinhVien.Models.LopHocPhan

@{
    ViewBag.Title = "Thêm lớp học phần";
}

<div class="row mb-4">
    <div class="col-12">
        <h2 class="page-title">
            <i class="fas fa-plus-circle"></i> Thêm Lớp Học Phần Mới
        </h2>
    </div>
</div>

<div class="card">
    <div class="card-header">
        <i class="fas fa-edit"></i> Nhập thông tin lớp học phần
    </div>
    <div class="card-body">
        @using (Html.BeginForm("Create", "LopHocPhan", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })

            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        @Html.LabelFor(model => model.MaLHP, new { @class = "form-label" })
                        <span class="text-danger">*</span>
                        @Html.TextBoxFor(model => model.MaLHP, new { @class = "form-control", placeholder = "VD: LHP01" })
                        @Html.ValidationMessageFor(model => model.MaLHP, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        @Html.LabelFor(model => model.MaMH, new { @class = "form-label" })
                        <span class="text-danger">*</span>
                        @Html.DropDownListFor(model => model.MaMH,
                            (IEnumerable<SelectListItem>)ViewBag.DanhSachMonHoc,
                            "-- Chọn môn học --",
                            new { @class = "form-select" })
                        @Html.ValidationMessageFor(model => model.MaMH, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="mb-3">
                        @Html.LabelFor(model => model.MaHK, new { @class = "form-label" })
                        <span class="text-danger">*</span>
                        @Html.DropDownListFor(model => model.MaHK,
                            (IEnumerable<SelectListItem>)ViewBag.DanhSachHocKy,
                            "-- Chọn học kỳ --",
                            new { @class = "form-select" })
                        @Html.ValidationMessageFor(model => model.MaHK, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label for="MaKhoa" class="form-label">Khoa</label>
                        <span class="text-danger">*</span>
                        @Html.DropDownList("MaKhoa", ViewBag.DanhSachKhoa as List<SelectListItem>, new { @class = "form-control" })
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        @Html.LabelFor(model => model.MaGV, new { @class = "form-label" })
                        <span class="text-danger">*</span>
                        @Html.DropDownListFor(model => model.MaGV, ViewBag.DanhSachGiangVien as List<SelectListItem>, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.MaGV, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        @Html.LabelFor(model => model.PhongHoc, new { @class = "form-label" })
                        @Html.TextBoxFor(model => model.PhongHoc, new { @class = "form-control", placeholder = "VD: A101" })
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="mb-3">
                        @Html.LabelFor(model => model.SoLuongToiDa, new { @class = "form-label" })
                        <span class="text-danger">*</span>
                        @Html.TextBoxFor(model => model.SoLuongToiDa,
                        new { @class = "form-control", type = "number", min = "1", max = "100", placeholder = "VD: 40" })
                        @Html.ValidationMessageFor(model => model.SoLuongToiDa, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="alert alert-info">
                <i class="fas fa-info-circle"></i>
                <strong>Lưu ý:</strong> Sĩ số tối đa sẽ quyết định xem lớp đã đầy hay chưa khi sinh viên đăng ký.
            </div>

            <hr />

            <div class="text-end">
                <a href="@Url.Action("Index")" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Quay lại
                </a>
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save"></i> Thêm mới lớp học phần
                </button>
            </div>
        }
    </div>
</div>

@section scripts {
    <!-- ✅ FIX: Thêm jQuery trước tiên -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!-- Validation scripts -->
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

    <script>
        $(document).ready(function () {
            console.log("Script đã load, jQuery version: " + $.fn.jquery);

            var maKhoaDropdown = $('#MaKhoa');
            var maGVDropdown = $('#MaGV');

            // Hàm xử lý tải giáo viên
            function loadGiangVien(maKhoa) {
                console.log("=== Tải giáo viên cho khoa: " + maKhoa + " ===");

                maGVDropdown.empty();
                maGVDropdown.append($('<option></option>').val('').text('-- Đang tải giáo viên... --'));

                if (maKhoa && maKhoa.trim() !== '') {
                    $.ajax({
                        url: '@Url.Action("GetGiangVienByKhoa", "LopHocPhan")',
                        type: 'GET',
                        data: { maKhoa: maKhoa },
                        dataType: 'json',
                        success: function (data) {
                            console.log("✓ Nhận được " + data.length + " giáo viên");
                            maGVDropdown.empty();

                            if (data && data.length > 0) {
                                $.each(data, function (i, gv) {
                                    console.log("  - " + gv.Value + ": " + gv.Text);
                                    maGVDropdown.append($('<option></option>').val(gv.Value).text(gv.Text));
                                });
                            } else {
                                console.warn("⚠ Không có giáo viên nào");
                                maGVDropdown.append($('<option></option>').val('').text('-- Không có giáo viên --'));
                            }
                        },
                        error: function (xhr, status, error) {
                            console.error("✗ Lỗi AJAX:");
                            console.error("  Status: " + status);
                            console.error("  Error: " + error);
                            console.error("  Response: " + xhr.responseText);
                            maGVDropdown.empty();
                            maGVDropdown.append($('<option></option>').val('').text('-- Lỗi tải giáo viên --'));
                        }
                    });
                } else {
                    console.log("Không chọn khoa");
                    maGVDropdown.empty();
                    maGVDropdown.append($('<option></option>').val('').text('-- Chọn giáo viên --'));
                }
            }

            // Tải khi form load lần đầu
            var initialMaKhoa = maKhoaDropdown.val();
            console.log("Khoa ban đầu: " + initialMaKhoa);
            if (initialMaKhoa && initialMaKhoa.trim() !== '') {
                loadGiangVien(initialMaKhoa);
            }

            // Bắt sự kiện change dropdown khoa
            maKhoaDropdown.on('change', function () {
                var maKhoa = $(this).val();
                console.log(">>> Người dùng chọn khoa: " + maKhoa);
                loadGiangVien(maKhoa);
            });
        });
    </script>
}