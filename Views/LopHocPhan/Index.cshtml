@model IEnumerable<QuanLySinhVien.Models.LopHocPhan>

@{
    ViewBag.Title = "Danh sách lớp học phần";
}

<div class="row mb-4">
    <div class="col-12">
        <h2 class="page-title">
            <i class="fas fa-th-list"></i> Quản lý Lớp Học Phần
        </h2>
    </div>
</div>

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <span><i class="fas fa-list"></i> Danh sách lớp học phần</span>
        <a href="@Url.Action("Create")" class="btn btn-light btn-sm">
            <i class="fas fa-plus"></i> Thêm lớp mới
        </a>
    </div>
    <div class="card-body">
        <!-- Form tìm kiếm -->
        <div class="row mb-3">
            <div class="col-md-6">
                @using (Html.BeginForm("Index", "LopHocPhan", FormMethod.Get, new { @class = "d-flex" }))
                {
                    <input type="text" name="searchString" class="form-control me-2"
                           placeholder="Tìm kiếm lớp, môn, học kỳ..."
                           value="@ViewBag.SearchString" />
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-search"></i> Tìm
                    </button>
                    <a href="@Url.Action("Index")" class="btn btn-secondary ms-2">
                        <i class="fas fa-redo"></i>
                    </a>
                }
            </div>
            <div class="col-md-6 text-end">
                <span class="badge bg-info text-dark fs-6">
                    Tổng: @Model.Count() lớp
                </span>
            </div>
        </div>

        <!-- Bảng danh sách -->
        <div class="table-responsive">
            <table class="table table-hover table-striped">
                <thead>
                    <tr>
                        <th>Mã LHP</th>
                        <th>Môn Học</th>
                        <th>Học Kỳ</th>
                        <th>Giáo Viên</th>
                        <th class="text-center">Phòng</th>
                        <th class="text-center">Sĩ Số</th>
                        <th class="text-center">Trạng Thái</th>
                        <th class="text-center" width="150">Thao Tác</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var item in Model)
                        {
                            var cssClass = item.TrangThai == "Đang mở" ? "success" :
                                          (item.TrangThai == "Chưa mở" ? "warning" : "danger");

                            <tr>
                                <td><strong class="text-primary">@item.MaLHP</strong></td>
                                <td>@item.TenMH</td>
                                <td><span class="badge bg-secondary">@item.TenHK</span></td>
                                <td>
                                    @if (!string.IsNullOrEmpty(item.TenGiangVien))
                                    {
                                        @item.TenGiangVien
                                    }
                                    else
                                    {
                                        <span class="text-muted">Chưa có</span>
                                    }
                                </td>
                                <td class="text-center">@item.PhongHoc</td>
                                <td class="text-center">
                                    @{
                                        var tiLe = item.SoLuongToiDa > 0 ? (double)item.SoSinhVienDangKy / item.SoLuongToiDa * 100 : 0;
                                        var badgeClass = tiLe >= 100 ? "bg-danger" : (tiLe >= 80 ? "bg-warning" : "bg-success");
                                    }
                                    <span class="badge @badgeClass">@item.SoSinhVienDangKy/@item.SoLuongToiDa</span>
                                </td>
                                <td class="text-center">
                                    <span class="badge bg-@cssClass">@item.TrangThai</span>
                                </td>
                                <td class="text-center">
                                    <div class="btn-group btn-group-sm" role="group">
                                        <a href="@Url.Action("Details", new { id = item.MaLHP })"
                                           class="btn btn-info" title="Chi tiết">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a href="@Url.Action("Edit", new { id = item.MaLHP })"
                                           class="btn btn-warning" title="Sửa">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a href="@Url.Action("Delete", new { id = item.MaLHP })"
                                           class="btn btn-danger" title="Xóa">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="8" class="text-center text-muted py-4">
                                <i class="fas fa-inbox fa-3x mb-3"></i>
                                <p>Không có dữ liệu lớp học phần</p>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>