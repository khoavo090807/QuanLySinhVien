@model QuanLySinhVien.Models.TaoLopThiViewModel

<div class="row mb-4">
    <div class="col-12">
        <h2 class="page-title">
            <i class="fas fa-plus-circle"></i> Tạo Lớp Thi
        </h2>
    </div>
</div>

<div class="card">
    <div class="card-header">
        <i class="fas fa-edit"></i> Nhập thông tin lớp thi
    </div>
    <div class="card-body">
        @using (Html.BeginForm("Create", "LopThi", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })

            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="form-label">Chọn Đề Thi <span class="text-danger">*</span></label>
                        <select name="MaDT" class="form-select" required>
                            <option value="">-- Chọn đề thi --</option>
                            @foreach (SelectListItem item in ViewBag.DanhSachDeThi)
                            {
                                <option value="@item.Value">@item.Text</option>
                            }
                        </select>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="form-label">Ngày Thi <span class="text-danger">*</span></label>
                        <input type="datetime-local" name="NgayThi" class="form-control" required />
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="form-label">Phòng Thi <span class="text-danger">*</span></label>
                        <input type="text" name="PhongThi" class="form-control" placeholder="A101" required />
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="form-label">Giảng Viên Coi Thi</label>
                        <select name="MaGV" class="form-select">
                            <option value="">-- Chọn giảng viên --</option>
                            @foreach (SelectListItem item in ViewBag.DanhSachGiangVien)
                            {
                                <option value="@item.Value">@item.Text</option>
                            }
                        </select>
                    </div>
                </div>
            </div>

            <div class="alert alert-info">
                <i class="fas fa-info-circle"></i>
                <strong>Thông tin:</strong>
                <ul class="mb-0">
                    <li>Hệ thống sẽ tự động tải danh sách sinh viên theo khoa của đề thi</li>
                    <li>Sinh viên sẽ được sắp xếp theo thứ tự A-Z</li>
                    <li>Tối đa 40 sinh viên/lớp thi</li>
                </ul>
            </div>

            <div class="text-end">
                <a href="@Url.Action("Index")" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Quay lại
                </a>
                <button type="submit" class="btn btn-success">
                    <i class="fas fa-save"></i> Tạo Lớp Thi
                </button>
            </div>
        }
    </div>
</div>