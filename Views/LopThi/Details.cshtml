@model QuanLySinhVien.Models.LopThi

@{
    ViewBag.Title = "Chi Tiết Lớp Thi";
}

<div class="row mb-4">
    <div class="col-12">
        <h2 class="page-title">
            <i class="fas fa-info-circle"></i> Chi Tiết Lớp Thi
        </h2>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <i class="fas fa-exam"></i> Thông Tin Lớp Thi
            </div>
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label class="text-muted">Mã Lớp Thi:</label>
                        <p class="fw-bold fs-5">@Model.MaLopThi</p>
                    </div>
                    <div class="col-md-6">
                        <label class="text-muted">Tên Lớp Thi:</label>
                        <p class="fw-bold">@Model.TenLopThi</p>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label class="text-muted">Đề Thi:</label>
                        <p class="fw-bold">@Model.TenDeThi</p>
                    </div>
                    <div class="col-md-6">
                        <label class="text-muted">Khoa:</label>
                        <p class="fw-bold">@Model.TenKhoa</p>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label class="text-muted">Ngày Thi:</label>
                        <p class="fw-bold">@Model.NgayThi.ToString("dd/MM/yyyy HH:mm")</p>
                    </div>
                    <div class="col-md-6">
                        <label class="text-muted">Phòng Thi:</label>
                        <p class="fw-bold">@Model.PhongThi</p>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label class="text-muted">Giảng Viên Coi Thi:</label>
                        <p class="fw-bold">@Model.TenGiangVien</p>
                    </div>
                    <div class="col-md-6">
                        <label class="text-muted">Thời Gian Làm Bài:</label>
                        <p class="fw-bold">@Model.ThoiGianLamBai phút</p>
                    </div>
                </div>

                <hr />

                <div class="row">
                    <div class="col-md-4">
                        <div class="text-center p-3 border rounded bg-light">
                            <i class="fas fa-users fa-2x text-primary mb-2"></i>
                            <p class="text-muted">Tổng Sinh Viên</p>
                            <p class="fs-4 fw-bold">@Model.SoLuong</p>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="text-center p-3 border rounded bg-light">
                            <i class="fas fa-check-circle fa-2x text-success mb-2"></i>
                            <p class="text-muted">Đã Tham Gia</p>
                            <p class="fs-4 fw-bold">@Model.SoDaTham</p>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="text-center p-3 border rounded bg-light">
                            <i class="fas fa-clock fa-2x text-warning mb-2"></i>
                            <p class="text-muted">Chưa Tham Gia</p>
                            <p class="fs-4 fw-bold">@(Model.SoLuong - Model.SoDaTham)</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card">
            <div class="card-header bg-success text-white">
                <i class="fas fa-chart-pie"></i> Trạng Thái
            </div>
            <div class="card-body text-center">
                <div class="mb-3">
                    <h6 class="text-muted">Trạng Thái Lớp Thi</h6>
                    @{
                        var statusClass = Model.TrangThai == "Đã thi" ? "success" :
                                        (Model.TrangThai == "Đang thi" ? "warning" : "info");

                        // Tính toán phần trăm
                        int percent = Model.SoLuong > 0 ? (Model.SoDaTham * 100 / Model.SoLuong) : 0;
                    }
                    <span class="badge bg-@statusClass" style="font-size: 14px;">@Model.TrangThai</span>
                </div>

                <div class="progress mb-3">
                    <div class="progress-bar bg-success"
                         style="width: @(percent)%;"
                         role="progressbar">
                        @(percent)%
                    </div>
                </div>

                <small class="text-muted">
                    Đã tham gia: @Model.SoDaTham/@Model.SoLuong
                </small>
            </div>
        </div>

        <div class="card mt-3">
            <div class="card-header bg-info text-white">
                <i class="fas fa-cogs"></i> Hành Động
            </div>
            <div class="card-body d-grid gap-2">
                <a href="@Url.Action("DanhSachSinhVien", new { id = Model.MaLopThi })"
                   class="btn btn-primary">
                    <i class="fas fa-users"></i> Danh Sách Sinh Viên
                </a>
                <a href="@Url.Action("Index")" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Quay Lại
                </a>
            </div>
        </div>
    </div>
</div>