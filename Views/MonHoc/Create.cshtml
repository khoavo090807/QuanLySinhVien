@* ===== CREATE.CSHTML ===== *@
@model QuanLySinhVien.Models.MonHoc

@{
    ViewBag.Title = "Thêm môn học mới";
}

<div class="row mb-4">
    <div class="col-12">
        <h2 class="page-title">
            <i class="fas fa-book-medical"></i> Thêm môn học mới
        </h2>
    </div>
</div>

<div class="card">
    <div class="card-header">
        <i class="fas fa-edit"></i> Nhập thông tin môn học
    </div>
    <div class="card-body">
        @using (Html.BeginForm("Create", "MonHoc", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })

            
            <!-- Thêm phần này vào Views/MonHoc/Create.cshtml -->

            <div class="row">
                <div class="col-md-4">
                    <div class="mb-3">
                        @Html.LabelFor(model => model.MaMH, new { @class = "form-label" })
                        <span class="text-danger">*</span>
                        @Html.TextBoxFor(model => model.MaMH, new { @class = "form-control", placeholder = "Ví dụ: CSDL" })
                        @Html.ValidationMessageFor(model => model.MaMH, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="mb-3">
                        @Html.LabelFor(model => model.TenMH, new { @class = "form-label" })
                        <span class="text-danger">*</span>
                        @Html.TextBoxFor(model => model.TenMH, new { @class = "form-control", placeholder = "Nhập tên môn học" })
                        @Html.ValidationMessageFor(model => model.TenMH, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="col-md-2">
                    <div class="mb-3">
                        @Html.LabelFor(model => model.SoTinChi, new { @class = "form-label" })
                        <span class="text-danger">*</span>
                        @Html.TextBoxFor(model => model.SoTinChi, new { @class = "form-control", type = "number", min = "1", max = "10", Value = "3" })
                        @Html.ValidationMessageFor(model => model.SoTinChi, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <!-- THÊM CỘT KHOA -->
            <div class="row">
                <div class="col-md-4">
                    <div class="mb-3">
                        @Html.LabelFor(model => model.MaKhoa, new { @class = "form-label" })
                        <span class="text-danger">*</span>
                        @Html.DropDownListFor(model => model.MaKhoa,
                            (IEnumerable<SelectListItem>)ViewBag.DanhSachKhoa,
                            new { @class = "form-select" })
                        @Html.ValidationMessageFor(model => model.MaKhoa, "", new { @class = "text-danger" })
                        <small class="text-muted d-block mt-1">Chọn khoa sở hữu môn học này</small>
                    </div>
                </div>

                <div class="col-md-8">
                    <div class="mb-3">
                        <label for="MaMHTienQuyet" class="form-label">Môn học tiên quyết:</label>
                        <select name="MaMHTienQuyet" id="MaMHTienQuyet" class="form-select">
                            <option value="">-- Không có môn học tiên quyết --</option>
                            @if (ViewBag.DanhSachMonHoc != null)
                            {
                                foreach (var mh in ViewBag.DanhSachMonHoc)
                                {
                                    <option value="@mh.Value">@mh.Text</option>
                                }
                            }
                        </select>
                        <small class="text-muted d-block mt-1">Chọn môn học phải hoàn thành trước khi học môn này</small>
                    </div>
                </div>
            </div>

            <div class="alert alert-info">
                <i class="fas fa-info-circle"></i>
                <strong>Lưu ý:</strong> Sinh viên chỉ có thể đăng ký môn học của khoa mình. Vì vậy, hãy chắc chắn gán đúng khoa cho từng môn học.
            </div>

            <hr />

            <div class="text-end">
                <a href="@Url.Action("Index")" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Quay lại
                </a>
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save"></i> Lưu thông tin
                </button>
            </div>
            

            <hr />

            
        }
    </div>
</div>

