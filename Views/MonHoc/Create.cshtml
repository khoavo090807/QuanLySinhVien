@* ===== CREATE.CSHTML ===== *@
@model QuanLySinhVien.Models.MonHoc

@{
    ViewBag.Title = "Thêm môn học mới";
}

<div class="row mb-4">
    <div class="col-12">
        <h2 class="page-title">
            <i class="fas fa-book-medical"></i> Thêm môn học mới
        </h2>
    </div>
</div>

<div class="card">
    <div class="card-header">
        <i class="fas fa-edit"></i> Nhập thông tin môn học
    </div>
    <div class="card-body">
        @using (Html.BeginForm("Create", "MonHoc", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })

            <div class="row">
                <div class="col-md-4">
                    <div class="mb-3">
                        @Html.LabelFor(model => model.MaMH, new { @class = "form-label" })
                        <span class="text-danger">*</span>
                        @Html.TextBoxFor(model => model.MaMH, new { @class = "form-control", placeholder = "Ví dụ: CSDL" })
                        @Html.ValidationMessageFor(model => model.MaMH, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="mb-3">
                        @Html.LabelFor(model => model.TenMH, new { @class = "form-label" })
                        <span class="text-danger">*</span>
                        @Html.TextBoxFor(model => model.TenMH, new { @class = "form-control", placeholder = "Nhập tên môn học" })
                        @Html.ValidationMessageFor(model => model.TenMH, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="col-md-2">
                    <div class="mb-3">
                        @Html.LabelFor(model => model.SoTinChi, new { @class = "form-label" })
                        <span class="text-danger">*</span>
                        @Html.TextBoxFor(model => model.SoTinChi, new { @class = "form-control", type = "number", min = "1", max = "10", Value = "3" })
                        @Html.ValidationMessageFor(model => model.SoTinChi, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label for="MaMHTienQuyet" class="form-label">Môn học tiên quyết:</label>
                        <select name="MaMHTienQuyet" id="MaMHTienQuyet" class="form-control">
                            <option value="">-- Không có môn học tiên quyết --</option>
                            @if (ViewBag.DanhSachMonHoc != null)
                            {
                                foreach (var mh in ViewBag.DanhSachMonHoc)
                                {
                                    <option value="@mh.Value">@mh.Text</option>
                                }
                            }
                        </select>
                        <small class="text-muted">Chọn môn học phải hoàn thành trước khi học môn này</small>
                    </div>
                </div>

                <div class="col-md-3">
                    <div class="mb-3">
                        <label for="HocKy" class="form-label">Học kỳ:</label>
                        <select name="HocKy" id="HocKy" class="form-control">
                            <option value="">-- Chọn học kỳ --</option>
                            <option value="1">Học kỳ 1</option>
                            <option value="2">Học kỳ 2</option>
                            <option value="3">Học kỳ 3</option>
                            <option value="4">Học kỳ 4</option>
                            <option value="5">Học kỳ 5</option>
                            <option value="6">Học kỳ 6</option>
                            <option value="7">Học kỳ 7</option>
                            <option value="8">Học kỳ 8</option>
                        </select>
                        <small class="text-muted">Học kỳ được khuyến nghị</small>
                    </div>
                </div>

                <div class="col-md-3">
                    <div class="mb-3">
                        <label for="ThoiGianBatDau" class="form-label">Thời gian bắt đầu:</label>
                        <input type="date" name="ThoiGianBatDau" id="ThoiGianBatDau" class="form-control">
                        <small class="text-muted">Ngày bắt đầu học phần</small>
                    </div>
                </div>
            </div>

            <hr />

            <div class="text-end">
                <a href="@Url.Action("Index")" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Quay lại
                </a>
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save"></i> Lưu thông tin
                </button>
            </div>
        }
    </div>
</div>

