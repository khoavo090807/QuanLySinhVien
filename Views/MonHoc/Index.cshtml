@model IEnumerable<QuanLySinhVien.Models.MonHoc>

@{
    ViewBag.Title = "Danh sách môn học";
}

<div class="row mb-4">
    <div class="col-12">
        <h2 class="page-title">
            <i class="fas fa-book"></i> Quản lý Môn học
        </h2>
    </div>
</div>

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <span><i class="fas fa-list"></i> Danh sách môn học</span>
        <a href="@Url.Action("Create")" class="btn btn-light btn-sm">
            <i class="fas fa-plus"></i> Thêm môn học
        </a>
    </div>
    <div class="card-body">
        <div class="col-md-6">
            @using (Html.BeginForm("Index", "MonHoc", FormMethod.Get, new { @class = "d-flex" }))
            {
                <input type="text" name="searchString" class="form-control me-2"
                       placeholder="Tìm kiếm theo mã môn học, tên môn học, số tín chỉ..."
                       value="@ViewBag.SearchString" />
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-search"></i> Tìm
                </button>
                <a href="@Url.Action("Index")" class="btn btn-secondary ms-2">
                    <i class="fas fa-redo"></i>
                </a>
            }
        </div>
        <div class="mb-3">
            <span class="badge bg-info text-dark fs-6">
                Tổng số: @Model.Count() môn học
            </span>
        </div>

        <div class="table-responsive">
            <table class="table table-hover table-striped">
                <thead>
                    <tr>
                        <th width="15%">Mã môn học</th>
                        <th width="55%">Tên môn học</th>
                        <th width="15%" class="text-center">Số tín chỉ</th>
                        <th width="15%" class="text-center">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td><strong class="text-primary">@item.MaMH</strong></td>
                                <td>@item.TenMH</td>
                                <td class="text-center">
                                    <span class="badge bg-success fs-6">@item.SoTinChi TC</span>
                                </td>
                                <td class="text-center">
                                    <div class="btn-group btn-group-sm" role="group">
                                        <a href="@Url.Action("Edit", new { id = item.MaMH })"
                                           class="btn btn-warning" title="Sửa">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a href="@Url.Action("Delete", new { id = item.MaMH })"
                                           class="btn btn-danger" title="Xóa">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4" class="text-center text-muted py-4">
                                <i class="fas fa-inbox fa-3x mb-3"></i>
                                <p>Không có dữ liệu môn học</p>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>