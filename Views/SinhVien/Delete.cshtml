@model QuanLySinhVien.Models.SinhVien

@{
    ViewBag.Title = "Xóa sinh viên";
}

<div class="row mb-4">
    <div class="col-12">
        <h2 class="page-title text-danger">
            <i class="fas fa-trash-alt"></i> Xác nhận xóa sinh viên
        </h2>
    </div>
</div>

<div class="card border-danger">
    <div class="card-header bg-danger text-white">
        <i class="fas fa-exclamation-triangle"></i> Cảnh báo xóa dữ liệu
    </div>
    <div class="card-body">
        <div class="alert alert-warning" role="alert">
            <i class="fas fa-info-circle"></i> <strong>Lưu ý:</strong>
            Bạn có chắc chắn muốn xóa sinh viên này? Hành động này không thể hoàn tác!
        </div>

        <h4 class="mb-4">Thông tin sinh viên sẽ bị xóa:</h4>

        <div class="row">
            <div class="col-md-6">
                <dl class="row">
                    <dt class="col-sm-4">Mã sinh viên:</dt>
                    <dd class="col-sm-8"><strong class="text-primary">@Model.MaSV</strong></dd>

                    <dt class="col-sm-4">Họ tên:</dt>
                    <dd class="col-sm-8">@Model.HoTenSV</dd>

                    <dt class="col-sm-4">Ngày sinh:</dt>
                    <dd class="col-sm-8">
                        @if (Model.NgaySinh.HasValue)
                        {
                            @Model.NgaySinh.Value.ToString("dd/MM/yyyy")
                        }
                        else
                        {
                            <span class="text-muted">Chưa cập nhật</span>
                        }
                    </dd>

                    <dt class="col-sm-4">Giới tính:</dt>
                    <dd class="col-sm-8">
                        @if (Model.GioiTinh == "Nam")
                        {
                            <span class="badge bg-primary">
                                <i class="fas fa-mars"></i> Nam
                            </span>
                        }
                        else
                        {
                            <span class="badge bg-danger">
                                <i class="fas fa-venus"></i> Nữ
                            </span>
                        }
                    </dd>
                </dl>
            </div>

            <div class="col-md-6">
                <dl class="row">
                    <dt class="col-sm-4">Lớp:</dt>
                    <dd class="col-sm-8">
                        <span class="badge bg-success">@Model.TenLop</span>
                    </dd>

                    <dt class="col-sm-4">Email:</dt>
                    <dd class="col-sm-8">
                        <i class="fas fa-envelope text-primary"></i> @Model.Email
                    </dd>

                    <dt class="col-sm-4">Số điện thoại:</dt>
                    <dd class="col-sm-8">
                        <i class="fas fa-phone text-success"></i> @Model.SoDT
                    </dd>

                    <dt class="col-sm-4">Địa chỉ:</dt>
                    <dd class="col-sm-8">@Model.DiaChi</dd>
                </dl>
            </div>
        </div>

        <hr />

        @using (Html.BeginForm("Delete", "SinhVien", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.MaSV)

            <div class="text-end">
                <a href="@Url.Action("Index")" class="btn btn-secondary btn-lg">
                    <i class="fas fa-arrow-left"></i> Hủy bỏ
                </a>
                <button type="submit" class="btn btn-danger btn-lg" onclick="return confirm('Bạn có chắc chắn muốn xóa sinh viên này?');">
                    <i class="fas fa-trash"></i> Xác nhận xóa
                </button>
            </div>
        }
    </div>
</div>